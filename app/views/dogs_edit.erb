<form action="/dogs/edit" method="post">
  <input type='text' name='id' placeholder='Enter ID#'>

  <input type='submit' value='submit'>
</form>

<% if @edit_dog %>
  <p>Name: <%= @edit_dog.name %></p>
  <p>Breed: <%= @edit_dog.breed %></p>
  <p>Age: <%= @edit_dog.gender %></p>
  <p>Description: <%= @edit_dog.description %></p>

  <h1>Update <%= @edit_dog.name %>'s Info</h1>

<form action="/dogs/:id/edit" method="post">
  <input type="hidden" name="_method" value="put">


  <label for='name'>Dog's Name: </label>
  <input type='text' name='name'>

  <label for='breed'>Breed: </label>
  <input type='text' name='breed'>

  <label for='gender'>Gender</label>
  <input type='text' name='gender'>

  <label for='description'>Description</label>
  <input type='text' name='description'>

  <input type='hidden' name='dog_id' value= '<%=@edit_dog.id%>'>

  <input type='submit' value='submit'>
</form>

<% else   %>
<p> Search for the dog by its ID#. </p>

<% end %>




